#include "Direction.h"

glm::vec2 getDirectionVector(const Direction& direction) {

    if(direction.horizontal == HorizontalDirection::LEFT) {
        
        if(direction.vertical == VerticalDirection::STRAIGHT) {
            
            return glm::vec2(-1, 0);
        }
    }

    return glm::vec2(0, 0);
}
