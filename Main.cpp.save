#include "SFML/System.hpp"
#include "SFML/Graphics.hpp"
#include "Player.h"

int main() {

    sf::RenderWindow window(sf::VideoMode(1024, 768), "Contra");

    sf::Event event;
    
    Player player;
    
    sf::Clock timer;
    const sf::Time timeStep(sf::seconds(0.02));

    while(window.isOpen()) {

        while(window.pollEvent(event)) {

            if(event.type == sf::Event::Closed) {

                window.close();
            }
        }
        
        

        window.clear();
        window.display();
    }
    return 0;
}
